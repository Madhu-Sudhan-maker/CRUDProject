@model CRUDProject.Models.Product

@{
    ViewBag.Title = "EditProduct";
}
<h2 style="text-align:center;background-color:yellowgreen;color:orangered">Edit Product</h2>
@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        @Html.LabelFor(P => P.ProductId)
        <br />
        @Html.TextBoxFor(P => P.ProductId)
    </div>
    <div>
        @Html.LabelFor(P => P.ProductName)
        <br />
        @Html.TextBoxFor(P => P.ProductName)
    </div>
    <div>
        @Html.LabelFor(P => P.CategoryId)
        <br />
        @Html.TextBoxFor(P => P.CategoryId)
    </div>
    <div>
        @Html.LabelFor(P => P.CategoryName)
        <br />
        @Html.TextBoxFor(P => P.CategoryName)
    </div>
    <div>
        <input type="submit" value="Update" />
        @Html.ActionLink("Cancel", "DisplayProducts")
    </div>

}


